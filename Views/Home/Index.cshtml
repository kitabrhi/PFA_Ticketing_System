@section Scripts {
    <script src="~/js/quantumdesk.js"></script>
    <script>
        // Animation pour les compteurs
        document.addEventListener('DOMContentLoaded', function() {
            const animateCounters = () => {
                const counterElements = document.querySelectorAll('.quantum-stat-number');

                counterElements.forEach(counter => {
                    const target = parseFloat(counter.textContent.replace(/,/g, '').replace(/\+/g, '').replace(/M/g, '000000').replace(/%/g, ''));
                    const duration = 2000; // ms
                    const frameRate = 60;
                    const totalFrames = duration / (1000 / frameRate);
                    let frame = 0;

                    const animate = () => {
                        if (frame < totalFrames) {
                            const progress = frame / totalFrames;
                            // Fonction d'easing pour ralentir vers la fin
                            const easing = progress < 0.5 ? 4 * progress * progress * progress : 1 - Math.pow(-2 * progress + 2, 3) / 2;

                            let currentValue = target * easing;

                            // Formater en fonction du nombre
                            let formattedValue;
                            if (counter.textContent.includes('%')) {
                                formattedValue = currentValue.toFixed(1) + '%';
                            } else if (counter.textContent.includes('M')) {
                                formattedValue = (currentValue / 1000000).toFixed(0) + 'M+';
                            } else if (currentValue > 1000) {
                                formattedValue = Math.floor(currentValue) + '+';
                            } else {
                                formattedValue = currentValue.toFixed(1) + '+';
                            }

                            counter.textContent = formattedValue;
                            frame++;
                            requestAnimationFrame(animate);
                        }
                    };

                    animate();
                });
            };

            // Observer pour démarrer l'animation quand les éléments sont visibles
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateCounters();
                        observer.disconnect();
                    }
                });
            }, { threshold: 0.5 });

            const statsSection = document.querySelector('.quantum-stat-card');
            if (statsSection) {
                observer.observe(statsSection);
            }
        });
    </script>
